{
  "manifest_version": 2,
  "name": "Roll20 Super User",
  "version": "1.2.2",

  "description": "This extension provides customizable macros for roll20",
  "icons": {
    "19": "icon19.png"
  },

  "page_action": {
    "default_icon": "icon19.png",
    "default_title": "Roll20 Super User"
  },

  "author": "@FAJITA_MANE",
  "background": {
    "scripts": ["jquery-1.12.0.min.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.app.roll20.net/*"],
      "js": ["jquery-1.12.0.min.js", "domcheck.js", "roll20whispers.js"]
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "homepage_url": "http://github.com/FajitaMane/chrome-improvement-suite",
  "incognito": "split",
  "minimum_chrome_version": "19",
  "offline_enabled": true,
  "options_page": "options.html",
  "permissions": ["tabs", "storage"],
  "short_name": "CIS",
  "version_name": "0.1"
}